---
import Navbar from "../components/Navbar.astro";
import Footer from "../../src/components/Footer.astro";
import "../styles/global.css";
const { title } = Astro.props;
const { description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content={description ||
        "The Frontend Marketer is a blog about digital marketing and frontend web development."}
    />
    <title>{title || "The Frontend Marketer"}</title>
    <link rel="icon" type="image/svg+xml" href="/tfm_favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class={Astro.props.bodyClass}>
    <header>
      <Navbar />
    </header>
    <main class="siteContainer">
      <slot />
    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>
