---
import Layout from "../layouts/default.astro";
import { getCollection } from "astro:content";
import { CldImage } from "astro-cloudinary";
import Sidebar from "../components/Sidebar.astro";
import { HOMEPAGE_ARTICLE_LIMIT, getPostUrl } from "../constants";

const blogPosts = (await getCollection("blog"))
  .sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  )
  .slice(0, HOMEPAGE_ARTICLE_LIMIT); // Limit the number of articles
---

<Layout>
  <!-- Break out of siteContainer constraint -->
  <div
    class="relative left-1/2 right-1/2 w-screen -ml-[50vw] -mr-[50vw] bg-[#f5f5f5]"
  >
    <section class="siteContainer">
      <div class="ml-4 mr-4 md:flex gap-12 justify-center leading-6 font-light">
        <div>
          {
            blogPosts.map((post) => {
              return (
                <div class="post max-w-[700px] pt-4 pb-4 border-b border-gray-300">
                  {post.data.image && (
                    <a
                      href={getPostUrl(post)}
                      aria-label={`Read ${post.data.title}`}
                    >
                      <CldImage
                        class="w-full"
                        src={post.data.image}
                        width={700}
                        height={350}
                        alt={post.data.title}
                        loading="eager"
                        decoding="async"
                      />
                    </a>
                  )}
                  <p class="mt-4">
                    <a
                      class="text-[#AC0C19] text-sm"
                      href={`/${post.data.category.toLowerCase().replace(/\s+/g, "-")}/`}
                    >
                      {post.data.category}
                    </a>
                  </p>
                  <h2>
                    <a
                      class="text-[#1C1C1C] font-bold hover:underline hover:text-[#0093ff]"
                      href={getPostUrl(post)}
                    >
                      {post.data.title}
                    </a>
                  </h2>

                  <p>{post.data.description}</p>

                  <time class="text-xs" datetime={post.data.date.toISOString()}>
                    {new Date(post.data.date).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                      timeZone: "UTC",
                    })}
                  </time>
                </div>
              );
            })
          }
        </div>
        <!-- Sidebar Section -->

        <Sidebar />
      </div>
    </section>
  </div>
</Layout>
